<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:layout_margin="5dp">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:shadowColor="#2d2d2d"
        android:checked="true"
        />

    <ImageView
        android:id="@+id/wishlist_image"
        android:layout_margin="1dp"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/gifts_34"/>

    <TextView
        android:id="@+id/wishlist_itemname"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="Item-Name"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/wishlist_rate"
        android:layout_margin="1dp"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:text="Rs.500"
        android:textStyle="bold"
        android:textSize="12sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/wishlist_quantity"
        android:layout_margin="1dp"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:text="1"
        android:textStyle="bold"
        android:textSize="12sp"
        android:gravity="center"/>


    <ImageButton
        android:id="@+id/wishlist_remove"
        android:layout_margin="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:src="@drawable/ic_close_black_24dp"/>







</LinearLayout>